<?xml version="1.0" encoding="UTF-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="discussionItem"
            type="com.example.eduempoweryd.forum.DiscussionItem" />
    </data>
    <FrameLayout android:id="@+id/frameList"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginBottom="@dimen/_12pxh"
        android:clickable="true"
        android:onClick="onClick"
        android:focusable="true"
        tools:ignore="UsingOnClickInXml">
        <View
            android:background="@drawable/rectangle_bg_gray_300_border_white_a700_radius_13_56"
            android:id="@+id/viewRectangleThirtyOne"
            android:layout_gravity="top|start"
            android:layout_height="@dimen/_62pxh"
            android:layout_marginBottom="@dimen/_24pxv"
            android:layout_marginEnd="@dimen/_28pxh"
            android:layout_marginStart="@dimen/_28pxh"
            android:layout_marginTop="@dimen/_24pxv" android:layout_width="@dimen/_62pxh"/>
        <LinearLayout android:id="@+id/linearRowrectanglethirtytwo"
            android:layout_gravity="start"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:clickable="true"
            android:onClick="onClick"
            android:orientation="horizontal" style="@style/groupStylegray_100cornerRadius"
            android:focusable="true">

            <LinearLayout
                android:id="@+id/linearColumnrectanglethirtytwo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_17pxh"
                android:layout_marginTop="@dimen/_24pxv"
                android:layout_marginBottom="@dimen/_30pxv"
                android:layout_weight="0.34"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageRectangle"
                    android:layout_width="@dimen/_40pxh"
                    android:layout_height="@dimen/_40pxh"
                    android:layout_marginTop="@dimen/_3pxv"
                    android:layout_marginBottom="@dimen/_10pxv"
                    android:scaleType="fitXY"
                    android:src="@drawable/img_rectangle32"
                    tools:ignore="ContentDescription"
                    tools:src="@drawable/img_rectangle32" />
            </LinearLayout>
            <LinearLayout android:gravity="center_horizontal"
                android:id="@+id/linearColumnatomicsubstanc"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_28pxv"
                android:layout_marginEnd="@dimen/_11pxh"
                android:layout_marginTop="@dimen/_23pxv"
                android:layout_weight="0.66" android:layout_width="0dp" android:orientation="vertical">
                <TextView android:ellipsize="end"
                    android:gravity="center_horizontal"
                    android:id="@+id/txtTopic"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_6pxh"
                    android:layout_width="match_parent"
                    android:singleLine="true"
                    android:text="@string/tooopiccc"
                    style="@style/txtPoppinssemibold14" tools:text="@string/tooopiccc"/>
                <TextView android:gravity="center_horizontal"
                    android:id="@+id/txtContent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_13pxv"
                    android:layout_width="match_parent"
                    android:text="@string/comment_comment_comment"
                    style="@style/txtPoppinslight12" tools:text="@string/comment_comment_comment"/>
            </LinearLayout>

            <ImageButton
                android:id="@+id/btnEdit"
                android:layout_gravity="end|bottom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_10pxh"
                android:layout_marginBottom="@dimen/_10pxh"
                android:clickable="true"
                android:onClick="onClick"
                app:srcCompat="@drawable/img_checkmark"
                android:focusable="true"
                android:background="@android:color/transparent"/>


        </LinearLayout>
    </FrameLayout>
</layout>
