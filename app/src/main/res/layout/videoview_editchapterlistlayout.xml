<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="418dp"
        android:layout_height="86dp"
        android:layout_marginBottom="10dp"
        android:backgroundTint="#410375"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="111dp">

            <TextView
                android:id="@+id/chapterno"
                android:layout_width="38dp"
                android:layout_height="43dp"
                android:layout_marginStart="4dp"
                android:layout_marginTop="12dp"
                android:fontFamily="@font/poppins_bold"
                android:text="01"
                android:textColor="@color/white"
                android:textSize="28sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/chaptername"
                android:layout_width="206dp"
                android:layout_height="64dp"
                android:layout_marginStart="4dp"
                android:layout_marginTop="12dp"
                android:fontFamily="@font/poppins"
                android:text="The Atomic Truth: Itâ€™s Mostly Empty Space, Just Like My Social Calendar"
                android:textColor="@color/white"
                android:textSize="15dp"
                app:layout_constraintStart_toEndOf="@+id/chapterno"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/button1"
                android:layout_width="80dp"
                android:layout_height="35dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="48dp"
                android:backgroundTint="#CEECFE"
                android:fontFamily="@font/poppins"
                android:text="Edit"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="14sp"
                app:cornerRadius="8dp"
                app:layout_constraintStart_toEndOf="@+id/chaptername"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="80dp"
                android:layout_height="27dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/rounded_bg8"
                android:fontFamily="@font/poppins"
                android:text="Video"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:textColor="@color/black"
                app:layout_constraintStart_toEndOf="@+id/chaptername"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>