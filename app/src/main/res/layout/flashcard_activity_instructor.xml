<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:padding="16dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginBottom="16dp">

        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/back_button"
            android:background="@drawable/back_button"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/tv_flashcards_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/poppins_bold"
            android:text="Flashcards"
            android:textColor="@color/white"
            android:textSize="24sp" />

    </RelativeLayout>


    <ListView
        android:id="@+id/lv_flashcards"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:divider="@android:color/transparent"
        android:dividerHeight="8dp" />

    <Button
        android:id="@+id/btn_add_flashcard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add new flashcard"
        android:textColor="#FFFFFF"
        android:fontFamily="@font/poppins_regular"
        android:background="@drawable/rounded_black_button" />

    <Button
        android:id="@+id/btn_save_flashcards"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save flashcards"
        android:textColor="#FFFFFF"
        android:fontFamily="@font/poppins_regular"
        android:background="@drawable/rounded_black_button"
        android:layout_marginTop="8dp" />

</LinearLayout>